<UserControl x:Class="LabelCreator.Controls.FilePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LabelCreator.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <WrapPanel Orientation="Horizontal">
        <TextBox x:Name="FilePickerText" Text="{Binding FilePickerText}" Width="150" />
        <Button Content="Browse" Margin="3,0,0,0" Click="BrowseClick" />
    </WrapPanel>
</UserControl>
